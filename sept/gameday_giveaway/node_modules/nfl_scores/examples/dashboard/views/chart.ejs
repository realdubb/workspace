<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/css/bootstrap.min.css' />
    <link rel='stylesheet' href='/css/bootstrap-table.min.css' />
    <script type="text/javascript" src="/js/jquery.min.js"></script>
    <script type="text/javascript" src="/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="/js/bootstrap-table.min.js"></script>
  </head>
  <body>
      <div class="container">
          <h1><%= title %></h1>
          <h2>Week <%= week %></h2>

          <table id="table" data-show-columns="true" data-toggle="table">
            <thead>
                <tr>
                    <th data-field="game"  data-sortable="true">Game ID</th>
                    <th data-field="result"  data-sortable="true">W/L</th>
                    <th data-field="team"  data-sortable="true">Team</th>
                    <th data-field="score" data-sortable="true">Score</th>
                </tr>
            </thead>
              <% for (var i = 0; i < games.length; i++) { %>
                  <tr>
                    <td><%= games[i].vnn +' @ '+ games[i].hnn %></td>
                    <td>
                      <% if(parseInt(games[i].vs) == parseInt(games[i].hs)) {%>
                        N/A
                      <% } else{ %>
                      <%= parseInt(games[i].vs) > parseInt(games[i].hs) ? "W" : "L" %>
                      <% }%>
                    </td>
                    <td>
                       <%= games[i].vnn %>
                    </td>
                    <td>
                      <%= games[i].vs %>
                    </td>
                  </tr>
                  <tr>
                    <td><%= games[i].vnn +' @ '+  games[i].hnn %></td>
                    <td>
                      <% if(parseInt(games[i].vs) == parseInt(games[i].hs)) {%>
                        N/A
                      <% } else{ %>
                      <%= parseInt(games[i].vs) > parseInt(games[i].hs) ? "W" : "L" %>
                      <% }%>
                    </td>
                    <td class='info'>
                       <%= games[i].hnn %>
                    </td>
                    <td>
                      <%= games[i].hs %>
                    </td>
                  </tr>
              <% } %>
          </table>
      </div>
  </body>


  <script>
    </script>
</html>
